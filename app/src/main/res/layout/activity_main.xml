<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.96">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/circulo"
                android:text="@string/clear"
                android:textColor="@color/white"
                app:backgroundTint="#DD2C00"
                android:layout_margin="5dp"
                android:textSize="30sp"
                android:backgroundTint="#DD2C00"
                />

            <Button
                android:id="@+id/btnparentesis"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/circulo"
                android:text="@string/parentesis"
                android:textColor="#FFFFFF"
                app:backgroundTint="#292525"
                android:layout_margin="5dp"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btnexp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/circulo"
                android:text="@string/exponente"
                android:textColor="#FFFFFF"
                app:backgroundTint="#292525"
                android:layout_margin="5dp"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btndiv"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/circulo"
                android:text="@string/division"
                android:textColor="#FFFFFF"
                app:backgroundTint="#292525"
                android:layout_margin="5dp"
                android:textSize="30sp"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/circulo"
                android:text="@string/siete"
                android:textColor="#FFFFFF"
                app:backgroundTint="#292525"
                android:layout_margin="5dp"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btn8"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/circulo"
                android:text="@string/ocho"
                android:textColor="#FFFFFF"
                app:backgroundTint="#292525"
                android:layout_margin="5dp"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btn9"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/circulo"
                android:text="@string/nueve"
                android:textColor="#FFFFFF"
                app:backgroundTint="#292525"
                android:layout_margin="5dp"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btnMul"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/circulo"
                android:text="@string/multiplicacion"
                android:textColor="#FFFFFF"
                app:backgroundTint="#292525"
                android:layout_margin="5dp"
                android:textSize="30sp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/circulo"
                android:text="@string/cuatro"
                android:textColor="#FFFCFC"
                app:backgroundTint="#292525"
                android:layout_margin="5dp"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btn5"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/circulo"
                android:text="@string/cinco"
                android:textColor="#FFFFFF"
                app:backgroundTint="#292525"
                android:layout_margin="5dp"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btn6"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/circulo"
                android:text="@string/seis"
                android:textColor="#FFFFFF"
                app:backgroundTint="#292525"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btnresta"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/circulo"
                android:text="@string/resta"
                android:textColor="#FFFFFF"
                app:backgroundTint="#292525"
                android:layout_margin="5dp"
                android:textSize="30sp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/circulo"
                android:text="@string/uno"
                android:textColor="#FFFFFF"
                app:backgroundTint="#292525"
                android:layout_margin="5dp"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btn2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/circulo"
                android:text="@string/dos"
                android:textColor="#FFFFFF"
                app:backgroundTint="#292525"
                android:layout_margin="5dp"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btn3"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/circulo"
                android:text="@string/tres"
                android:textColor="#FFFFFF"
                app:backgroundTint="#292525"
                android:layout_margin="5dp"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btnsuma"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/circulo"
                android:text="@string/suma"
                android:textColor="#FFFFFF"
                app:backgroundTint="#292525"
                android:layout_margin="5dp"
                android:textSize="30sp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnmasmenos"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/circulo"
                android:text="@string/masmenos"
                android:textColor="#FFFFFF"
                app:backgroundTint="#292525"
                android:layout_margin="5dp"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btncero"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/circulo"
                android:text="@string/cero"
                android:textColor="#FFFFFF"
                app:backgroundTint="#292525"
                android:layout_margin="5dp"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btnpunto"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/circulo"
                android:text="@string/punto"
                android:textColor="#FFFFFF"
                app:backgroundTint="#292525"
                app:iconTint="#000000"
                android:layout_margin="5dp"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btnIgual"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/circulo"
                android:text="@string/igual"
                android:textColor="#FFFFFF"
                android:layout_margin="5dp"
                app:backgroundTint="#43a047"
                android:textSize="30sp"/>
        </TableRow>
    </TableLayout>

    <EditText
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/txtvista"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="false"
        android:textAlignment="textEnd"
        android:inputType="none"
        tools:ignore="LabelFor,RtlCompat"
        android:textSize="36sp"
        />

    <ImageButton
        android:id="@+id/borrar"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/borrar"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="5dp"
        app:backgroundTint="#292525"
        android:background="@drawable/circulo"
        app:srcCompat="@drawable/borrar"/>
</androidx.constraintlayout.widget.ConstraintLayout>